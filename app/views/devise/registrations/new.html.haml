%h2= t("signup")
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %p
    = f.label :email, t("account.email")
    = f.email_field :email, :class => "input_field"
  %p
    = f.label :password, t("account.password")
    = f.password_field :password, :class => "input_field"
  %p
    = f.label :password_confirmation, t("account.password_confirm")
    = f.password_field :password_confirmation, :class => "input_field"
  %p
    = f.submit t("signup")
  
= render :partial => "devise/shared/links"
