- if controller_name != 'sessions'
  = link_to t("signin"), new_session_path(resource_name)
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  %b
    -#= link_to t("signup"), new_registration_path(resource_name)
    = link_to t("signup"), '/page/comment-adherer'
  %br/
  %br
- if devise_mapping.recoverable? && controller_name != 'passwords'
  = link_to t("account.forgot_password"), new_password_path(resource_name)
  %br/
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to t("account.did_not_received_confirmation"), new_confirmation_path(resource_name)
  %br/
