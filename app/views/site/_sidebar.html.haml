- cache "sidebar_#{I18n.locale}_#{Time.now.utc.in_time_zone("Beijing").strftime("%Y%m%d")}" do
  #side_bar
    #site_logo= link_to image_tag("APE-LOGO.png"), main_app.root_path, {:title => t("home.title")}
    = render "events/calendar"
    .home_side_block#categories
      .home_side_block_title= t("category")
      %ul.home_side_block_content
        - categories_side.each do |category|
          %li
            .category_title= link_to category.title, posts_with_category_path(category)
            .category_description= category.description
            %ul
              - category.posts.each do |post|
                %li= link_to post.short_title, main_app.post_path(post)

    .home_side_block#most_read_posts
      .home_side_block_title= t("blog.mostread")
      %ul.home_side_block_content
        - most_posts.each do |post|
          %li= link_to post.short_title, post_path(post)

    .home_side_block#recent_comments
      .home_side_block_title= t("comment.recent")
      %ul.home_side_block_content
        - recent_comments.each do |comment|
          -#%li= link_to comment.short_content, post_path(comment.commentable)
          - %li= link_to 'comment.short_content', '/'

    .home_side_block#contact
      .home_side_block_title= t("contact.title")
      %p.home_side_block_content
        = setting.contact_email
        %br
        = t 'contact.info'
