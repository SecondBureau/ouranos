#side_bar
  #site_logo= link_to image_tag("APE-LOGO.png"), main_app.root_path
  = render "site/calendar"
  .home_side_block#categories
    %h3.home_side_block_title= t("category")
    %ul.home_side_block_content
      - @categories_side.each do |category|
        %li
          %h4= link_to category.title, posts_with_category_path(category)
          %ul
            - category.posts.each do |post|
              %li= link_to truncate(post.title, :length => 38, :omission => '... '), main_app.post_path(post)
						  
  .home_side_block#most_read_posts
    %h3.home_side_block_title= t("blog.mostread")
    %ul.home_side_block_content
      - @most_posts.each do |post|
        %li= link_to truncate(post.title, :length => 38, :omission => '... '), post_path(post)
        
  .home_side_block#recent_comments
    %h3.home_side_block_title= t("comment.recent")
    %ul.home_side_block_content
      - @recent_comments.each do |comment|
        %li= link_to truncate(comment.content, :length => 38, :omission => '... '), post_path(comment.commentable)
  
