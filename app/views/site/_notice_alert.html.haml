#alert= flash[:alert]
#notice= flash[:notice]
:javascript
  $(function(){
    if("#{flash[:alert]}".length > 0){
      $("#alert").stop(true, false).slideDown("slow").delay(1000).slideUp("slow");
    }
    if("#{flash[:notice]}".length > 0){
      $("#notice").stop(true, false).slideDown("slow").delay(1000).slideUp("slow");
    }
  });
