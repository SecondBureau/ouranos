- cache "post_#{I18n.locale}_#{@post.id}_#{can?(:manage, @post) ? 'admin' : 'member'}" do 
  - @comments = CommentDecorator.decorate(@post.comments)
  - @comment = @post.comments.build
  - @comments.delete @comment
  #current_content_wrapper
    #post_wrapper
      #post_title= @post.title
      #post_author_date= l @post.updated_at, :format => :post
      = render "management", :post => @post
      .clear
      #post_content= raw @post.content
      #post_printer= @post.printer
    #add_comment= render "comments/form"
    #comment_list= render "comments/comments_list"

:coffeescript
  $ ->
    $(".print_icon").click ->
      left = screen.width/2 - 510
      post_path = $(".print_icon").attr("print_path")
      printwindow = window.open(post_path, "print", "status=no, menubar=no, toolbar=no, scrollbars=yes, width=1020, height=800")
      printwindow.moveTo(left, 0)
      printwindow.focus()

