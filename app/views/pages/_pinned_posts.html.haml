.home_item_title
  %h1= t("blog.pinned")
.home_item_content
  %ul
    - @pinned_posts.each_with_index do |post, index|
      %li.post_title= link_to post.title, main_app.post_path(post)
      %li.post_content= strip_tags(truncate(post.content, :length => 325, :omission => '...'))
      - if index != (@pinned_posts.length - 1)
        %li.post_split_line
